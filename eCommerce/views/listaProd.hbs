{{#if productos.length}}
<table class="table">
  <thead>
    <tr>
      <th scope="col">#ID</th>
      <th scope="col">Titulo</th>
      <th scope="col">Precio</th>
      <th scope="col">Imagen</th>
    </tr>
  </thead>
  <tbody>
        {{#each productos}}
        <tr>
          <th>{{id}}</th>
          <td>{{titulo}}</td>
          <td>{{precio}}</td>
          <td><img src="{{url}}" height="50" width="50"></td>
        </tr>
        {{/each}}
  </tbody>
</table>
{{ else }}
  <div class="alert"> 
    <h1>NO HAY PRODUCTOS</h1>
  </div>
{{/if}}


{{#if req.query.admin}}
<h2>AGREGAR NUEVO PRODUCTO</h2>
<form action="/productos?admin=true" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Product</label>
    <input type="text" id="title" class="form-control" name="titulo" placeholder="Enter Product" required>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Price</label>
    <input type="number" id="price" class="form-control" name="precio" placeholder="000" required>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">URL</label>
    <input type="text" id="url" class="form-control" name="url" placeholder="Enter URL" required>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Description</label>
    <input type="text" id="descripcion" class="form-control" name="descripcion" placeholder="Enter description" required>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Code</label>
    <input type="text" id="codigo" class="form-control" name="codigo" placeholder="Enter code" required>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Stock</label>
    <input type="text" id="stock" class="form-control" name="stock" placeholder="Enter stock" required>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
{{/if}}

